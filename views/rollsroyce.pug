extends layout

block content
  h1= title
  - const rollsroyce  = ['rollsroyce_type','model','cost']
  - let results;
  script.
    function buy(x){
      alert('Purchased Item: ' + x)
   } 
  div(class='container-fluid')
    div(class='row')
      each results, index in rollsroyce 
        div(class='col-sm-2' onclick='buy('+index+')') #{results}